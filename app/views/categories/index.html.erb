
<div class="container mx-auto">
  <!-- Make a table for Categories with the following fields: id, wc_id, slug, name, parent_id  -->
  <table class="table-auto">
    <thead>
      <tr>
        <th class="px-4 py-2">ID</th>
        <th class="px-4 py-2">WC ID</th>
        <th class="px-4 py-2">Slug</th>
        <th class="px-4 py-2">Name</th>
        <th class="px-4 py-2">Parent ID</th>
      </tr>
    </thead>
    <tbody>
     <% # Loop through the categories %>
      <% @categories.each do |category| %>
        <tr>
          <td class="border px-4 py-2"><%= category.id %></td>
          <td class="border px-4 py-2"><%= category.wc_id %></td>
          <td class="border px-4 py-2"><%= category.slug %></td>
          <td class="border px-4 py-2"><%= category.name %></td>
          <td class="border px-4 py-2"><%= category.parent_id %></td>
        </tr>
      <% end %>
    </tbody>

  </table>
</div>


